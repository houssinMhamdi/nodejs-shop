<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <h1>Edit <%=product.name%> Product</h1>

    <form action="/products/<%=product._id%>?_method=PUT" method="POST">
        <input type="text" name="name" id="" placeholder="product name" value="<%=product.name%>">
        <input type="number" name="price" id="" placeholder="product price" value="<%=product.price%>">
        <select name="category" id="">
            <%for(let category of categories){%>
                <option value="<%=category%>" <%=product.category === category ? 'selected' : ''%>><%=category%></option>    
            <%}%>  
        </select>
        <button>Submit</button>
    </form>
    <a href="/">See All Products</a>
    <a href="/products/<%=product._id%>">cancel</a>
</body>
</html>